{
  "version": "2.0.0",
  "description": "Default configuration for DJ Music Cleanup Tool",
  
  "streaming_config": {
    "batch_size": 50,
    "max_workers": 4,
    "memory_limit_mb": 512,
    "chunk_size_mb": 32,
    "enable_parallel_processing": true,
    "enable_memory_monitoring": true
  },
  
  "recovery_config": {
    "enable_auto_checkpoints": true,
    "checkpoint_interval": 300,
    "max_checkpoints": 20,
    "enable_crash_detection": true,
    "workspace_cleanup_days": 7
  },
  
  "processing": {
    "audio_formats": [
      ".mp3", ".flac", ".wav", ".m4a", ".aac", 
      ".ogg", ".opus", ".wma", ".mp4", ".m4p"
    ],
    "quality_threshold": 128,
    "enable_fingerprinting": false,
    "fingerprinting_timeout": 30,
    "metadata_timeout": 10
  },
  
  "organization": {
    "structure": "genre/decade",
    "naming_pattern": "{artist} - {title}",
    "handle_duplicates": "keep_highest_quality",
    "create_unknown_folders": true,
    "sanitize_filenames": true,
    "max_filename_length": 100
  },
  
  "integrity": {
    "level": "checksum",
    "checksum_algorithm": "md5",
    "enable_caching": true,
    "cache_max_age_days": 7,
    "enable_repair_suggestions": true
  },
  
  "database": {
    "backend": "sqlite",
    "connection_pool_size": 5,
    "enable_wal_mode": true,
    "vacuum_interval_days": 30
  },
  
  "logging": {
    "level": "INFO",
    "file": null,
    "max_size_mb": 10,
    "backup_count": 3,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  
  "features": {
    "enable_progress_bars": true,
    "enable_reports": true,
    "enable_undo_scripts": true,
    "enable_statistics": true
  },
  
  "advanced": {
    "protected_paths": [],
    "custom_genres": {},
    "quality_scoring": {
      "bitrate_weight": 0.4,
      "sample_rate_weight": 0.3,
      "format_weight": 0.2,
      "file_size_weight": 0.1
    }
  }
}